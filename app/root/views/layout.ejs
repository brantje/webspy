<!-- /#wrapper -->
<script>
    $(document).ready(function(){

        var loadSection = function(section){
            $('.section').hide();
            $(section).show();
        }
        if(location.hash){
            loadSection(location.hash)
        } else {
            loadSection('#home');
        }
        $('.mainnav a').click(function(evt){
            var target = $(this).attr('href');
            if(target == '#'){
                target = '#home';
            }
            loadSection(target)
        });
    })
</script>
