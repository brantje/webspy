<ol class="breadcrumb">
    <li><a href="#">Admin</a></li>
    <li class="active">Settings</li>
</ol>
<h1>Settings</h1>
<div class="row">
    <div class="col-xs-12 col-md-4">
        <form method="post">
            <table class="table table-striped table-responsive">
                <tr>
                    <td>Allow registrations</td>
                    <td>
                        <select name="setting[allow_registrations]">
                            <option value="true" <%= (settings.allow_registrations == "true") ? 'selected' : '' %>>Yes</option>
                            <option value="false" <%= (settings.allow_registrations == "false") ? 'selected' : '' %>>No</option>
                        </select>
                    </td>
                </tr>
           </table>
           <input type="submit" value="Save" class="btn btn-success">
        </form>
    </div>
</div>